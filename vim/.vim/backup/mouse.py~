# import the module
import time
from pymouse import PyMouse

# instantiate a mouse object
mouse = PyMouse()
next_explore = 5*4*60
few_secs = 1.5
# get the mouse position
#while 1:
  #time.sleep(1)
  #print mouse.position()


time.sleep(5)

# Town Map
mouse.click(265, 486, 1)
time.sleep(few_secs)
  
while 1:
  # Town Map
  mouse.click(265, 486, 1)
  time.sleep(few_secs)
  # Sewer
  mouse.click(359, 785, 1)
  time.sleep(few_secs)
  # Auto Explore Button
  mouse.click(263, 520, 1)
  time.sleep(few_secs)
  # Auto Explore MessageBox Button
  mouse.click(500, 725, 1)

  time.sleep(next_explore)

